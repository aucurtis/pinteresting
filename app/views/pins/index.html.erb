<div class="panel panel-info"> 
  <div class="panel-heading">
<h1>Listing pins</h1>
</div>

<div class="panel-body">
  <div class = "form-group">
  <table>
    <thead>
      <tr>
        <th>Image</th>
        <th>Description</th>
        <th>User email</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
  </div>
<div class = "form-group">
  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url(:thumb) %></td>
        <td><%= pin.description %></td>
        <td><%= pin.user.email if pin.user %></td>
        <td><%= link_to 'Show', pin, class: "btn btn-info" %></td>
        <% if pin.user == current_user %>
        <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</div>
</table>
</div>

<br>
  <div class="panel-footer">
  <% if user_signed_in? %>
    <%= link_to 'New Pin', new_pin_path, class: "btn btn-info" %>
  <% end %>
  </div>
</div>